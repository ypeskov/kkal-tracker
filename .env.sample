# Database Configuration
DATABASE_TYPE=sqlite
DATABASE_PATH=./data/app.db
# POSTGRES_URL=postgres://user:password@localhost/kkal_tracker?sslmode=disable

# Server Configuration
PORT=8080
JWT_SECRET=your-jwt-secret-key-change-this-in-production
LOG_LEVEL=debug

# SMTP Configuration (for user activation emails)
# For Gmail: Use App Password (https://support.google.com/accounts/answer/185833)
# 1. Enable 2FA on your Google account
# 2. Go to Security > App passwords
# 3. Generate an app password for "Mail"
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password-here
SMTP_FROM=noreply@kkal-tracker.com

# URL of the Web app part front end
APP_URL=http://localhost:8080

# Google Drive Backup Configuration
# Use rclone to generate the token: https://rclone.org/drive/
# Auth via OAuth2
# Because service accounts are not supported for Google Drive API
GDRIVE_OAUTH_TOKEN={"access_token":"***","token_type":"Bearer","refresh_token":"***","expiry":"2025-09-27T18:05:39.438191+03:00"}

GDRIVE_FOLDER_PATH=/services/kkal-tracker/backups